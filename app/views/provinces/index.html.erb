<p style="color: green"><%= notice %></p>

<h1 class="title is-3">Province Collection</h1>

<div id="provinces">
  <table class="table is-striped">
    <tr>
      <th>ID</th>
      <th>Province</th>
      <th>GST</th>
      <th>PST</th>
      <th>HST</th>
    </tr>
    <% @provinces.each do |p|%>
      <tr>
        <td><%= link_to p.id, p %></td>
        <td><%= link_to p.name, p %></td>
        <td>
          <% unless p.GST == 0 %>
            <p><%= p.GST.to_i %>%</p>
          <%else%>
            <p>-</p>
          <% end %>
        </td>
        <td>
          <% unless p.PST.nil? || p.PST == 0 %>
            <% if p.code == "QC" %>
              <p><%= p.PST %>%</p>
            <% else %>
              <p><%= p.PST.to_i %>%</p>
            <% end %>
          <%else%>
            <p>-</p>
          <% end %>
        </td>
        <td>
          <% unless p.HST.nil? || p.HST == 0 %>
            <p><%= p.HST.to_i %>%</p>
          <%else%>
            <p>-</p>
          <% end %>
        </td>
      </tr>
    <% end %>
  </table>
</div>